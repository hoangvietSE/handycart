<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="supplierFavoriteViewModel"
            type="com.soict.hoangviet.handycart.ui.favorite.supplier.SupplierFavoriteViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.soict.hoangviet.handycart.base.BaseRecyclerView
            android:id="@+id/rcv_supplier_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include
            bind:isVisible="@{supplierFavoriteViewModel.login}"
            layout="@layout/layout_need_login" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>