<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseRecyclerView">
        <attr name="brv_padding" format="dimension" />
        <attr name="brv_padding_start" format="dimension" />
        <attr name="brv_padding_end" format="dimension" />
        <attr name="brv_padding_top" format="dimension" />
        <attr name="brv_padding_bottom" format="dimension" />
        <attr name="brv_enable_refresh" format="boolean" />
        <attr name="brv_text_no_result" format="string|reference" />
    </declare-styleable>

    <declare-styleable name="BaseToolbar">
        <attr name="icon_left" format="enum">
            <enum name="none" value="0" />
            <enum name="menu" value="1" />
            <enum name="back" value="2" />
        </attr>
        <attr name="icon_right" format="enum">
            <enum name="none" value="0" />
            <enum name="search" value="1" />
            <enum name="save" value="2" />
            <enum name="sale_off" value="3" />
            <enum name="menu" value="4" />
        </attr>
        <attr name="title" format="string" />
        <attr name="title_right" format="string" />
    </declare-styleable>

    <declare-styleable name="ClearableEditText">
        <attr name="android:text" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:hint" />
        <attr name="android:lines" />
        <attr name="android:inputType" />
        <attr name="android:textColorHint" />
        <attr name="edtMaxLength" />
        <attr name="edtGravityCentered" />
        <attr name="edtPadding" />
        <attr name="edtUnderlineColor" />
        <attr name="edtBackground" />
        <attr name="edtIcon" />
        <attr name="edtEditable" />
        <attr name="clearButtonDrawable" />
        <attr name="clearButtonSize" />
    </declare-styleable>

    <declare-styleable name="NotificationBadge">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="nbBackground" format="reference" />
        <attr name="nbAnimationEnabled" format="boolean" />
        <attr name="nbAnimationDuration" format="integer" />
        <attr name="nbMaxTextLength" format="integer" />
        <attr name="nbEllipsizeText" format="string" />
    </declare-styleable>

    <declare-styleable name="QuantitySelected">
        <attr name="qs_max_items" format="integer" />
        <attr name="qs_default_items" format="integer" />
    </declare-styleable>

    <declare-styleable name="SquareTextView">
        <attr name="backgroundColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
    </declare-styleable>
</resources>